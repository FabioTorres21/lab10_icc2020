    <div class="container">
        <h3><a href="/empleados">Lista de   Empleados</a></h3>
        <h1>Editar Empleado</h1>
        <form action="/empleados/update/{{ empleado._id }}" method="post">
            
            <div class="form-group">
                <label for="formGroupExampleInput" >Nombre</label>
                <div class="col-sm-10">
                    <input type="text"  class="form-control-plaintext" id="nombre" name="nombre" value="{{ empleado.nombre }}">
                </div>
            </div>

            <div class="form-group">
                <label for="formGroupExampleInput" >Email</label>
                <div class="col-sm-10">
                    <input type="text"  class="form-control-plaintext" id="email" name="email" value="{{ empleado.email }}">
                </div>
            </div>

            <div class="form-group">
                <label for="formGroupExampleInput" >DNI</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="dni" name="dni" value="{{  empleado.dni }}" >
                </div>
            </div>
            
            <div class="form-group">
                <label for="formGroupExampleInput">Sexo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="sexo" name="sexo" value="{{  empleado.sexo }}">
                </div>
            </div>

            <div class="form-group">
                <label for="formGroupExampleInput">Telefono</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="telefono" name="telefono" value="{{  empleado.telefono }}">
                </div>
            </div>

            <button  class="btn btn-primary" type="submit">Update</button>

            
        </form>

       

    </div>
