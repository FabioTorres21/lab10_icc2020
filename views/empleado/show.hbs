<div class="container">
    <h3><a href="/empleados">Lista de empleados</a></h3>
    <h1>Detalle de Empleados</h1>
    <form>
        <div class="form-group row">
            <label for="static" class="col-sm-2 col-form-label">Nombres</label>
            <div class="col-sm-10">
                <label>{{ empleado.nombre }}</label>
            </div>
        </div>
        <div class="form-group row">
            <label for="static" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <label>{{ empleado.email }}</label>
            </div>
        </div>
        <div class="form-group row">
            <label for="static" class="col-sm-2 col-form-label">DNI</label>
            <div class="col-sm-10">
                <label>{{ empleado.dni }}</label>
            </div>
        </div>
        <div class="form-group row">
            <label for="static" class="col-sm-2 col-form-label">Sexo</label>
            <div class="col-sm-10">
                <label>{{ empleado.sexo }}</label>
            </div>
        </div>
        <div class="form-group row">
            <label for="static" class="col-sm-2 col-form-label">Telefono</label>
            <div class="col-sm-10">
                <label>{{ empleado.telefono }}</label>
            </div>
        </div>
    </form>

    <h4><a href="/empleados/edit/{{ empleado._id }}"> EDIT</h4>

    <form action="/empleados/delete/{{ empleado._id }}" method="POST">
        <button type="submit" class="btn btn-primary my-1">DELETE</button>
    </form>

</div>