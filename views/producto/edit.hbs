    <div class="container">
        <h3><a href="/productos">Lista de Productos</a></h3>
        <h1>Editar Producto</h1>
        <form action="/productos/update/{{ producto._id }}" method="post">
            
            <div class="form-group">
                <label for="formGroupExampleInput" >Nombre</label>
                <div class="col-sm-10">
                    <input type="text"  class="form-control-plaintext" id="nombre" name="nombre" value="{{ producto.nombre }}">
                </div>
            </div>

            <div class="form-group">
                <label for="formGroupExampleInput" >Precio</label>
                <div class="col-sm-10">
                    <input type="text"  class="form-control-plaintext" id="precio" name="precio" value="{{ producto.precio }}">
                </div>
            </div>

            <div class="form-group">
                <label for="formGroupExampleInput" >Stock</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="stock" name="stock" value="{{ producto.stock }}" >
                </div>
            </div>
            
            <button  class="btn btn-primary" type="submit">Update</button>

            
        </form>

       

    </div>
